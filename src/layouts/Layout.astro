---
const { title, children } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <title>{title || 'Mi Aplicación de Música'}</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f0f0f0;
    }
    header, footer {
      background-color: #333;
      color: #fff;
      padding: 1rem;
      text-align: center;
    }
    main {
      padding: 2rem;
    }
  </style>
</head>
<body>
  <header>
    <h1>Mi Aplicación de Música</h1>
  </header>
  <main>
    {children}
  </main>
  <footer>
    <p>&copy; 2024 Mi Aplicación de Música. Todos los derechos reservados.</p>
  </footer>
</body>
</html>